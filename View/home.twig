{% extends 'template.twig' %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ BASE_PATH }}/View/css/home.css">
{% endblock %}

{% block content %}
    
<div class="flex_col">
            <input type='text' class="fo    rm-control me-2" id='text_search' name='text_search' autocomplete="off">
            <div id='matchList'></div>
            </div>
            <input type='hidden' id='result' name='result'>
            <input  class="btn btn-outline-success" type='submit' id='search' name='search' value='Rechercher'>
            <textarea id="response"></textarea>
    <section class="container-fluid">
        <section class="main-content">

            <!--- Groupe and stats Panel --->
            <section class="groupe-panel">
                <h3><i class="fas fa-users"></i></h3>
                <section class="groupe-display">

                </section>
            </section>

            <!-- Make Posts -->
            <section>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Bonjour, faire un post
                </button>

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="" method="post">
                                    <label for="publish">
                                        <textarea id="publish" name="publish"></textarea>
                                    </label>
                                    <input type="submit" id="submitPublish" name="submitPublish" class="btn btn-primary">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!--- Feed --->
            <section class="feed-panel">
                <section class="post">
                    <div>
                        <img class="img-fluid" src="{{ BASE_PATH }}/View/images/default.png">
                        <p> Bonjour ceci est un post Bonjour ceci est un post Bonjour ceci est un post Bonjour ceci est un post Bonjour ceci est un post Bonjour ceci est un post Bonjour ceci est un post</p>
                    </div>
                    <div class="like-comment">
                        <p><span><i class="far fa-thumbs-up"></i></span> | J'aime</p>
                        <p><span><i class="far fa-comment-dots"></i></span> | Commenter</p>
                    </div>
                </section>
            </section>

            <!--- Story --->
            <section class="story-panel">
                <h3><i class="fas fa-history"></i></h3>
                <section class="story-display">

                </section>
            </section>

        </section>
    </section>

{% endblock %}

{% block script %}
<script src="{{ BASE_PATH }}/js/jqueryUI.js" ></script>
    {{ parent() }}
{% endblock %}