                    <img class="chat-picture img-thumbnail" src="{{ session.user.picture }}" alt="photo de profil">
                    <img class="chat-picture img-thumbnail" src="{{ session.user.picture }}" alt="photo de profil">
                </div>
            </section>

            <!--- Section affichage du groupe / membre --->
            <section class="memberGroup-display">
                <h3>SCHUABIBZ</h3>
            </section>

