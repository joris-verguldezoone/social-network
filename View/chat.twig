{% extends 'template.twig' %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ BASE_PATH }}/View/css/discussion.css">
{% endblock %}

{% block content %}

    <section class="container-fluid">
        <section class="main-content">

            <!--- Section Rechercher une personne --->
            <section class="chat-panel">
                <section class="search-member">
                    <div class="search-bar">
                    <form id="form_search_user" method='post'>
                        <input type='text' class="form-control" id='text_search' name='text_search' autocomplete="off">
                        <input  class="btn btn-outline-success" type='submit' id='search' name='search' value='🔍'>
                        <input type='hidden' id='result' name='result'>
                    </div>
                    <div id='matchList'></div>
                </section>
            </section>

            <!--- Section voir ses dicsussion en cours --->
            <section class="chat-members">
                <div id="display_group_chat">
                
                </div>
            </section>

            <!--- Section affichage du groupe / membre --->
            <section class="memberGroup-display" style="display:flex; flex-direction:row;">
                
            </section>

            <!--- Section affichage du chat --->
            <section class="chat-display">
            </section>

            <!--- Section textarea --->
            <section class="text-area">
                <form class="form-inline">

                    <div class="form-group">
                        <textarea class="form-control" name="" id="desc" cols="30" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" onclick="sendMessages()" id='sendMsg' class="send btn btn-primary form-control"><i class="fas fa-paper-plane"></i></button>
                    </div>

                </form>
            </section>

        </section>
    </section>

{% endblock %}

{% block script %}
{{ parent() }}
    <script src="{{ BASE_PATH }}/js/jqueryUI.js" ></script>
{% endblock %}