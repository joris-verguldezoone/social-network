{% extends 'template.twig' %}

{% block style %}
{{ parent() }}
    <link rel="stylesheet" href="{{ BASE_PATH }}/View/css/modifyProfil.css">
{% endblock %}

{% block content %}

    <section class="container-fluid manage-profil">
        <h1>Informations Personnelles</h1>

        <div class="container all-card-content">
            <!-- Modify Profil Card -->
            <div class="card text-dark bg-light mb-3" style="max-width: 20rem;">
                <img src="{{ session.user.picture }}" class="card-img-top" alt="{{ session.user.name }}">
                <div class="card-body">
                    <h5 class="card-title">Photo de Profil</h5>
                    <form action="" method="post" enctype="multipart/form-data">
                        <label for="avatar"></label>
                        <input type="file" name="avatar" id="avatar">
                        <input type="submit" name="submitAvatar" id="submitAvatar" value="Changer">
                    </form>
                </div>
            </div>

            <!-- Modify Background Card -->
            <div class="card text-dark bg-light mb-3" style="max-width: 20rem;">
                <img src="{{ BASE_PATH }}/View/images/default_background.png" class="card-img-top" alt="Default Background">
                <div class="card-body">
                    <h5 class="card-title">Image de Couverture</h5>
                    <input type="file" id="background">
                    <input type="button" value="Changer" id="submitBackground">
                </div>
            </div>

        </div>
    </section>

{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}